<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--TextView-->
        <!--Estilo para etiquetas de los editText-->
        <style name="LabelEditText" parent="Widget.MaterialComponents.TextView">
            <item name="android:textSize">26sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:fontFamily">@font/archivo_black</item>
            <item name="android:layout_marginStart">@dimen/marginStartLabelRegLogRec</item>
            <item name="android:layout_marginTop">@dimen/marginTopLabelRegLogRec</item>
        </style>

        <!--Estilo para texto basico-->
        <style name="txtLestraBasica" parent="Widget.MaterialComponents.TextView">
            <item name="android:textSize">14sp</item>
            <item name="android:textStyle">normal</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:fontFamily">@font/archivo_black</item>
        </style>

        <!--Estilo para destacar accesos a Login y Registro-->
        <style name="SubLabel"  parent="Widget.MaterialComponents.TextView">
            <item name="android:textSize">17sp</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:fontFamily">@font/archivo_black</item>
        </style>



    <!--EditText-->
        <!-- Estilo para TextInputEditText-->
        <style name="EditTextBlancoLogReg" parent="@android:style/Widget.EditText">
            <item name="android:textSize">16sp</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:fontFamily">@font/archivo_black</item>
        </style>


    <!--Botones-->
        <!--Boton general, menos en algunas pantallas de fragments-->
        <style name="ButtonLogReg" >
            <item name="backgroundTint">@color/white</item>
            <item name="android:textSize">18sp</item>
            <item name="cornerRadius">12dp</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:fontFamily">@font/archivo_black</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:layout_marginStart">@dimen/marginStartButton</item>
            <item name="android:layout_marginEnd">@dimen/marginEndButton</item>
            <item name="android:layout_marginTop">@dimen/marginTopButton</item>
        </style>




</resources>