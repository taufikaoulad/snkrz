<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inde"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_SNKRZ"
    tools:context=".Activity.SplashScreen">

    <ImageView
        android:id="@+id/LogoSnkr"
        android:layout_width="@dimen/dimensinsLogo"
        android:layout_height="@dimen/dimensinsLogo"
        android:layout_marginTop="180dp"
        android:contentDescription="@string/logo_snkrz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/srkrz" />

    <ImageView
        android:id="@+id/LogoSnkrTransparente"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="@dimen/marginsStartLogo"
        android:layout_marginTop="180dp"
        android:contentDescription="@string/logo_snkrz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/srkrz"
        app:tint="@color/blanco_transparente" />


    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="82dp"
        android:indeterminate="true"
        app:trackColor="@color/progressBar_transparente"
        app:indicatorColor="@color/progressBar_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LogoSnkr"
        app:trackCornerRadius="15dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>